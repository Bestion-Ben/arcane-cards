{
  "functions": {
    "api/**/*.js": {
      "runtime": "nodejs18.x",
      "maxDuration": 10
    }
  },
  "rewrites": [
    {
      "source": "/((?!api/.*).*)",
      "destination": "/index.html"
    }
  ],
  "env": {
    "GOOGLE_SHEETS_API_KEY": "@google-sheets-api-key",
    "GOOGLE_SHEETS_SPREADSHEET_ID": "@google-sheets-spreadsheet-id", 
    "GA4_MEASUREMENT_ID": "G-ETSZEESNGZ"
  }
}